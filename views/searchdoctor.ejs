<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <title>Search Doctor</title>
    <script src="https://code.jquery.com/jquery-2.1.3.min.js"></script>
    <script src="//netdna.bootstrapcdn.com/bootstrap/3.1.1/js/bootstrap.min.js"></script>
    <link rel="stylesheet" type="text/css" href="//netdna.bootstrapcdn.com/bootstrap/3.1.1/css/bootstrap.min.css">

    <script>
        function changeMF(i) {
            var x = document.getElementById("MF");
            var y = document.getElementById("MF2");
            x.textContent = y.children[i].textContent;
            document.getElementById("hiddenMF").value=y.children[i].textContent;
        }

        function changeLAN(i) {
            var x = document.getElementById("LAN");
            var y = document.getElementById("LAN2");
            x.textContent = y.children[i].textContent;
            document.getElementById("hiddenLAN").value=y.children[i].textContent;
        }
    </script>
</head>
<body>
<!-- Search box Start -->
<form action="/searchdoctor" method="post" >
    <div class="well carousel-search hidden-sm">
        <div class="btn-group">
            <a  id="MF" name="MF" class="btn btn-default dropdown-toggle btn-select" data-toggle="dropdown" href="#">Select a Medical Field <span class="caret"></span></a>
            <ul id="MF2" class="dropdown-menu">
                <li><a onclick="changeMF(0)" href="#">Cardiology</a></li>
                <li><a onclick="changeMF(1)" href="#">Dentistry</a></li>
                <li><a onclick="changeMF(2)" href="#">Dietician</a></li>
                <li><a onclick="changeMF(3)" href="#">Family Medicine</a></li>
                <li><a onclick="changeMF(4)" href="#">Gastroenterology</a></li>
                <li><a onclick="changeMF(5)" href="#">Gynecology</a></li>
                <li><a onclick="changeMF(6)" href="#">Hematology</a></li>
                <li><a onclick="changeMF(7)" href="#">Nephrology</a></li>
                <li><a onclick="changeMF(8)" href="#">Neurology</a></li>
                <li><a onclick="changeMF(9)" href="#">Oncology</a></li>
                <li><a onclick="changeMF(10)" href="#">Neurology</a></li>
                <li><a onclick="changeMF(11)" href="#">Orthopedics</a></li>
                <li><a onclick="changeMF(12)" href="#">Pediatrics</a></li>
                <li><a onclick="changeMF(13)" href="#">Proctology</a></li>
                <li><a onclick="changeMF(14)" href="#">Psychiatry</a></li>
            </ul>
        </div>
        <div class="btn-group">
            <a id="LAN" name="LAN" class="btn btn-default dropdown-toggle btn-select2" data-toggle="dropdown" href="#">Select a Language <span class="caret"></span></a>
            <ul id="LAN2" class="dropdown-menu">
                <li><a onclick="changeLAN(0)" href="#">Hebrew</a></li>
                <li><a onclick="changeLAN(1)" href="#">English</a></li>
                <li><a onclick="changeLAN(2)" href="#">Russian</a></li>
                <li><a onclick="changeLAN(3)" href="#">Arabic</a></li>
                <li><a onclick="changeLAN(4)" href="#">Italian</a></li>
                <li><a onclick="changeLAN(5)" href="#">Spanish</a></li>
                <li><a onclick="changeLAN(6)" href="#">Portuguese</a></li>
                <li><a onclick="changeLAN(7)" href="#">Chinese</a></li>
            </ul>
        </div>
        <div class="btn-group">
            <input type="hidden" id="hiddenMF" name="hiddenMF" value="">
            <input id="firstname" class="form-control" name="fname" value="" placeholder="Doctor First Name">
        </div>
        <div class="btn-group">
            <input type="hidden" id="hiddenLAN" name="hiddenLAN" value="" >
            <input id="lastname" class="form-control" name="lname" value="" placeholder="Doctor Last Name">
        </div>
        <div class="btn-group">
                <button type="submit" id="btnSearch" class="btn btn-primary">Search</button>
        </div>
        <div class="btn-group">
            <a href="/profile">Cancel</a>
        </div>
    </div>
</form>
<!-- Search box End -->

<div class="container">
    <h2>Doctors</h2>
    <table id="tab" name="tab" class="table">
        <thead>
        <tr>
            <th>First name</th>
            <th>Last name</th>
            <th>Medical Field</th>
            <th>Clinic Addrees</th>
            <th>PhoneNumber</th>
            <th>Languages</th>
        </tr>
        </thead>
        <tbody>
        <% for(var i=0; i < Doctors.length; i++) { %>
        <tr>
            <td><%= Doctors[i].fname %></td>
            <td><%= Doctors[i].lname %></td>
            <td><%= Doctors[i].field %></td>
            <td><%= Doctors[i].clinic %></td>
            <td><%= Doctors[i].phone %></td>
            <td><%= Doctors[i].lan %></td>
        </tr>
        <% } %>
        </tbody>
    </table>
</div>
</body>
</html>